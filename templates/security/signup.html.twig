<!DOCTYPE html>
<html data-bs-theme="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Tłiter{% endblock %}</title>
        {% block javascripts %}
            {{ importmap('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="text-center mt-5">
                <h1>Tworzenie konta</h1>
                <div class="card w-50 mx-auto mt-3">
                    <div class="card-body">
                        <div class="card-text text-start">
                            {{ form_start(form) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Utwórz konto</button>
                            </div>
                            <div class="text-center">lub <a href="{{ path('login') }}">zaloguj się na istniejące konto</a></div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
